<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.ForgotPass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_crop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Forgot your password?"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#a6a4a4"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Enter your Email below to recive your \n password reset innstruction "
                    android:layout_marginBottom="30dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:hint="Email or Username"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_mail"
                    android:id="@+id/fetmail"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="SEND PASSWORD LINK"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_roundedcorner"
                    android:id="@+id/btnsendpasslink"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="LOGIN OR REGISTER"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textColor="#ff6b02"
                    android:id="@+id/loginagain"/>

        </LinearLayout>
</ScrollView>
</RelativeLayout>
