<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.Upload_New_Wire">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:id="@+id/post_dp"

        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ychat_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_uname"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="8dp"
            android:text="UserName"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rnd_layout">
        <ImageView
        android:id="@+id/post_image"
        android:layout_gravity="center"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />
    <ProgressBar
        android:id="@+id/preview_area"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:text="@string/preview_area"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/drop_preview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_text"
        android:hint="What's on your mind?"
        android:paddingBottom="50dp"
        android:textColorHint="#b7b4b4"
        android:maxLines="10"
        android:background="@null"
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_image"
        android:id="@+id/post_gallery"


        />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cam"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:id="@+id/post_cam"/>


</LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Post"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_roundedcorner"
        android:id="@+id/post_submit"/>

    </LinearLayout>></LinearLayout> </LinearLayout>
